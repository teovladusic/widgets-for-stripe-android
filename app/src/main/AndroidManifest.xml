<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".core.WidgetsForStripeApp"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/Theme.WidgetsForStripe"
        tools:targetApi="31">

        <activity
            android:name=".core.ui.main.MainActivity"
            android:exported="true"
            android:theme="@style/Theme.WidgetsForStripe"
            android:windowSoftInputMode="adjustNothing">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <receiver
            android:name=".core.ui.widget.revenue.StripeRevenueWidgetReceiver"
            android:exported="true">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/stripe_revenue_widget_info" />
        </receiver>

        <receiver
            android:name=".core.ui.widget.revenue.Stripe7DaysRevenueGraphWidgetReceiver"
            android:exported="true">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/stripe_7_days_graph_widget_info" />
        </receiver>

        <receiver
            android:name=".core.ui.widget.revenue.StripeRevenueLargeGridGraphWidgetReceiver"
            android:exported="true">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/stripe_revenue_large_grid_widget_info" />
        </receiver>

        <receiver
            android:name=".core.ui.widget.repeating_revenue.StripeMonthlyRepeatingRevenueWidgetReceiver"
            android:exported="true">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/stripe_monthly_revenue_widget_info" />
        </receiver>

        <receiver
            android:name=".core.ui.widget.revenue.StripeRevenueSmallGridGraphWidgetReceiver"
            android:exported="true">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/stripe_revenue_small_grid_widget_info" />
        </receiver>

        <service
            android:name="androidx.work.impl.foreground.SystemForegroundService"
            android:foregroundServiceType="dataSync"
            tools:node="merge" />

        <provider
            android:name="androidx.startup.InitializationProvider"
            android:authorities="com.teovladusic.widgetsforstripe.androidx-startup"
            tools:node="remove" />

    </application>

</manifest>